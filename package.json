{
  "name": "pure-ui-react",
  "version": "1.0.5",
  "description": "A pure and minimalistic design system for React, using only pure HTML elements and Styled Components",
  "main": "dist/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "test": "jest --config ./jest.config.js",
    "test:watch": "npm run test -- --watch",
    "start": "start-storybook --port 696 --no-manager-cache",
    "commit": "git pull && git add . && git cz && git push",
    "push": "npm run commit",
    "lint": "eslint ./**.js",
    "lint:fix": "eslint ./**.js --fix",
    "merge:master": "npm run merge:main",
    "merge:main": "git checkout main && git pull && git merge develop && git push && git checkout develop",
    "prepare:husky": "husky install",
    "publish": "git checkout main && git pull && npm publish & git checkout develop",
    "push:publish": "npm run push && npm run merge:master && npm run publish",
    "patch:publish": "npm version patch --no-git-tag-version && npm run push:publish"
  },
  "keywords": [
    "ui",
    "pure",
    "design",
    "system",
    "components",
    "clean",
    "lean",
    "minimalistic"
  ],
  "author": "Nelson Salles de Barros Filho",
  "license": "ISC",
  "dependencies": {
    "'": "file:storybook/addon-knobs/register'",
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@storybook/addon-controls": "^6.4.18",
    "@storybook/addon-knobs": "^6.4.0",
    "@storybook/builder-webpack5": "^6.4.18",
    "@storybook/manager-webpack5": "^6.4.18",
    "@storybook/react": "^6.4.18",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "formatadores": "^1.5.2",
    "jest": "^27.4.7",
    "react-hook-form": "^7.26.1",
    "react-use-error-boundary": "^0.0.6",
    "storybook-addon-jsx": "^7.3.14",
    "styled-components": "^5.3.3",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-node-externals": "^3.0.0"
  },
  "peerDependencies": {
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-is": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.6",
    "babel-jest": "^27.4.6",
    "commitizen": "^4.2.4",
    "concurrently": "^7.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "enzyme": "^3.11.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-storybook": "^0.5.6",
    "husky": "^7.0.4",
    "jest-sonar-reporter": "^2.0.0",
    "url-loader": "^4.1.1"
  },
  "setupFiles": [
    "./setupTests.js"
  ],
  "resolutions": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
