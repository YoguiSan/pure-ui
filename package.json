{
  "name": "pure-ui",
  "version": "1.0.0",
  "description": "A pure and minimalistic design system, using only pure HTML elements",
  "main": "index.js",
  "scripts": {
    "build": "rollup --config",
    "test": "jest",
    "start:lib": "rollup --config --watch",
    "start": "npm run install:setup-testing-environment && concurrently --kill-others \"npm run start:lib\" \"npm run start:test\" --prefix-colors green,yellow",
    "start:test": "cd test-project && npm start",
    "test:watch": "jest --config ./jest.config.js --watch",
    "commit": "git pull && git add . && git cz && git push",
    "push": "npm run commit",
    "lint": "eslint ./**.js",
    "lint:fix": "eslint ./**.js --fix",
    "merge:master": "npm run merge:main",
    "merge:main": "git checkout main && git pull && git merge develop && git push && git checkout develop",
    "prepare:husky": "husky install",
    "publish": "git checkout main && npm publish & git checkout develop",
    "install:all": "npm i && npm run install:setup-testing-environment",
    "install:test": "cd test-project && npm i",
    "i:test": "npm run npm install:test",
    "install:setup-testing-environment": "npm run install:test && cd test-project && npm i -S ../ && cd ../ && npm run link:react",
    "link:react": "cd test-project/node_modules/react && npm link && cd ../../../ && npm link react"
  },
  "keywords": [
    "ui",
    "pure",
    "design",
    "system",
    "components",
    "clean",
    "lean",
    "minimalistic"
  ],
  "author": "Nelson Salles de Barros Filho",
  "license": "ISC",
  "dependencies": {
    "jest": "^27.4.7",
    "rollup": "^2.63.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "styled-components": "^5.3.3"
  },
  "peerDependencies": {
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-is": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.6",
    "commitizen": "^4.2.4",
    "concurrently": "^7.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "enzyme": "^3.11.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "jest-sonar-reporter": "^2.0.0",
    "rollup-plugin-visualizer": "^5.5.2"
  },
  "resolutions": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
